{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [ "ES2020" ],
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "types": [ "node", "jest" ]
    },
    "include": [ "src", "prisma", "tests" ]
}